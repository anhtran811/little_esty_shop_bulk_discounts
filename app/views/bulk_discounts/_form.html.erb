<%= form_with model: @bulk_discount, url: path , method: method, local: true do |form| %>
  <%= form.label :quantity_threshold %>
  <%= form.text_field :quantity_threshold, :value => "#{quantity_threshold}" %>
  <%= form.label :percentage %>
  <%= form.text_field :percentage, :value => "#{percentage}" %>
  <%= form.submit button_text %>
<% end %>