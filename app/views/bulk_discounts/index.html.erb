 <div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text">Bulk Discount Dashboard</p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', admin_dashboard_index_path, style: 'pull-right' %>
      <%= link_to 'Merchant Invoices', merchant_invoices_path(@merchant), style: 'pull-right' %>
      <%= link_to 'Admin Invoices', admin_invoices_path, style: 'pull-right' %></li>
    </ul>
  </nav>
</div>
 
 <div class="row">
  <p class='ml-auto col-sm-5'>Bulk Discounts</p>
 </div>

<body>
  <%= link_to 'Create bulk discount', new_merchant_bulk_discount_path(@merchant) %>

  <ul class='ml-auto col-sm-4'>
    <% @merchant.bulk_discounts.each do |bulk_discount| %>
      <div id='bulk_discount-<%= bulk_discount.id %>'>
        <li><p>Discount: <%= link_to "#{bulk_discount.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}" %></li>
        <p>Quantity Threshold: <%= bulk_discount.quantity_threshold %> items<p>
        <p>Percentage: <%= bulk_discount.percentage %>%<p>
        <%= link_to "Delete bulk discount #{bulk_discount.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}", method: :delete %>
      </div>
    <% end %>
  </ul>

  <div class="row">
    <div id='holidays-'%>
      <p class='ml-auto col-sm-5'>Upcoming Holidays</p>
        <% @holidays.each do |holiday| %>
          <li><%= holiday %></li>
        <% end %>
    </div>
  </div>
</body>